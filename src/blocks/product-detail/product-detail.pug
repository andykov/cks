//- Все примеси в этом файле должны начинаться c имени блока (product-detail)

mixin product-detail(data, mods)

  //- Принимает:
  //-   data    {object} - набор свойств
  //-   data.imgTypeView {string} - тип слайдера
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +product-detail('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' product-detail--' + modsList[i].trim();
      }
    }

  .product-detail(class=allMods)&attributes(attributes)
    .product-detail__inner
      if data.imgTypeView == 'slider'
        .product-detail__slider
          .js-slider.slider
            .slider__item
              img(src="https://picsum.photos/1260/522", alt="")
            //- .slider__item
            //-   img(src="https://picsum.photos/1260/522", alt="")
      
      if data.imgTypeView == 'gallery' 
        .product-detail__gallery
          .js-gallery.gallery
            .gallery__item
              img(src="https://picsum.photos/1260/612", alt="")
            //- .gallery__item
            //-   img(src="https://picsum.photos/1260/612", alt="")

      block


